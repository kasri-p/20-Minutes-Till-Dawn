<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane
        xmlns:fx="http://javafx.com/fxml"
        xmlns="http://javafx.com/javafx"
        fx:controller="views.StartMenu"
        stylesheets="../CSS/style.css"
        styleClass="start-menu-background"
        prefHeight="600.0" prefWidth="900.0">

    <BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-padding: 100px; -fx-background-color: #222222;">
        <center>
            <VBox alignment="CENTER" spacing="15">
                <Button fx:id="startButton" text="Play Game" prefWidth="200"/>
                <Button text="Settings" prefWidth="200"/>
                <Button text="Quit" prefWidth="200" onAction="#handleExitButtonAction"/>
            </VBox>
        </center>
    </BorderPane>

</AnchorPane>